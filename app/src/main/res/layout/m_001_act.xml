<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"

android:background="@drawable/bg_bitmap_wood"
    android:layout_height="match_parent"
        android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ProgressBar
            android:padding="10dp"
            android:layout_width="300dp"
                android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/bg_loading_drawable"
            android:layout_height="300dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:text="loading"
            android:layout_height="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/bg_edit_text"
            android:layout_marginHorizontal="20dp"
            android:hint="user name"
            android:layout_height="50dp"/>
<!--        indeterminateDuration la thuoc tinh giup tinh thoi gian xoay cua vong tron (1000 = 1s)-->
<!--        indeterminateBehavior la thuoc tinh giup xoay nguoc lai cua vong tron-->

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="100dp"
            android:indeterminateBehavior="cycle"
            android:indeterminateDuration="5000"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/bg_progress_bar"
            android:secondaryProgress="80" />
        <TextView
            android:layout_width="50dp"
            android:layout_marginTop="98dp"
            android:layout_gravity="center_horizontal"
            android:text="80%"
            android:layout_height="wrap_content"/>
</FrameLayout>